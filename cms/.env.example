PAYLOAD_SECRET=replace-with-strong-secret
DATABASE_URL=postgresql://<user>:<pass>@<host>.neon.tech/<db>?sslmode=require   # Neon Postgres connection string
CMS_PUBLIC_URL=https://cms.getupsight.com
SITE_ORIGIN=https://getupsight.com

# Object storage (S3-compatible, e.g., AWS S3, Cloudflare R2)
S3_ENDPOINT=https://<custom-endpoint>              # optional; omit for AWS S3 (R2 example: https://<account-id>.r2.cloudflarestorage.com)
S3_REGION=us-east-1
S3_BUCKET=marketing-media
S3_ACCESS_KEY_ID=<s3-access-key>
S3_SECRET_ACCESS_KEY=<s3-secret-key>
S3_FORCE_PATH_STYLE=false                         # set true for providers that require it
